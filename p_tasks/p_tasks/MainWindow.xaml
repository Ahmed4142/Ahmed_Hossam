<Window x:Class="p_tasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p_tasks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="User Name" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="189,120,0,0" VerticalAlignment="Top" Height="37"/>
        <Label Content="Password" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="189,204,0,0" VerticalAlignment="Top" Height="35"/>
        <TextBox x:Name="usernametxt" HorizontalAlignment="Left" Margin="326,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="37"/>
        <PasswordBox x:Name="passordtxt" HorizontalAlignment="Left" Margin="326,204,0,0"   VerticalAlignment="Top" Width="178" Height="35"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="310,317,0,0" VerticalAlignment="Top" Width="157" Height="47" Click="login_button_click"/>

    </Grid>
</Window>
